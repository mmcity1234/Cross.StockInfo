<?xml version="1.0" encoding="utf-8" ?>
<views:ViewPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:views="clr-namespace:Cross.StockInfo.Views"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:b="clr-namespace:Behaviors;assembly=Behaviors"       
             xmlns:date="clr-namespace:Cross.StockInfo.Views.Control.DateTime" 
             xmlns:lang ="clr-namespace:Cross.StockInfo.Common.Localization"
             xmlns:picker="clr-namespace:Syncfusion.SfPicker.XForms;assembly=Syncfusion.SfPicker.XForms"
             x:Class="Cross.StockInfo.Views.Stock.Report.RevenueSummaryDateView">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>               
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <date:DatePickerControl x:Name="date" ColumnHeaderHeight="40" HorizontalOptions="Center" 
                                    PickerHeight="420"                
                                    HeaderText="{lang:Translate RevenueSummaryDate_SelectedHeader}"               
                                    PickerMode="Default"                                      
                                    PickerWidth="330"                                   
                                    ShowColumnHeader ="True"   
                                    ShowHeader="True"
                                    VerticalOptions="Center"
                                    SelectedItem="{Binding SelectedDate}">          
            </date:DatePickerControl>

            <Button Grid.Row="2" Text="{lang:Translate OK_Label}" Command="{Binding OkButtonClickedCommand}" HorizontalOptions="FillAndExpand" VerticalOptions="End"/>
        </Grid>
    </ContentPage.Content>
</views:ViewPage>