<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"                 
                    x:Class="Cross.StockInfo.Assets.Styles.DefaultStyle">


    <Color x:Key="LightGrayColor_ColumnAlternating">#F0F0F0</Color>
    <Color x:Key="DarkGrayColor_ColumnHeader">#646464</Color>


    <Style TargetType="Label" x:Key="DescriptionLabelStyle">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="TextColor" Value="#BCBCBC"></Setter>
    </Style>

    <Style TargetType="Label" x:Key="MainLabelStyle">
        <Setter Property="FontSize" Value="16"/>
        <!--<Setter Property="FontAttributes" Value="Bold"/>-->
    </Style>

</ResourceDictionary>